@page "/"
@inject Services.ParkingService ParkingService
@using System.Timers

<h1>Parking Panel</h1>

<div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Available Parking</h3>
                    <h3 class="card-title">@ParkingService.ParkingCount</h3>
                </div>

            </div>
        </div>
    </div>
</div>

